<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <!-- Main Fragment -->
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.pot.ui.theme.fragment.MainFragment"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_boardFragment"
            app:destination="@id/boardFragment" />
        <action
            android:id="@+id/action_mainFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
        <action
            android:id="@+id/action_mainFragment_to_exerciseBoardFragment"
            app:destination="@id/exerciseBoardFragment" />
        <action
            android:id="@+id/action_mainFragment_to_taxiBoardFragment"
            app:destination="@id/taxiBoardFragment" />
        <action
            android:id="@+id/action_mainFragment_to_studyBoardFragment"
            app:destination="@id/studyBoardFragment" />
        <action
            android:id="@+id/action_mainFragment_to_mealBoardFragment"
            app:destination="@id/mealBoardFragment" />
        <action
            android:id="@+id/action_mainFragment_to_myPageFragment"
            app:destination="@id/myPageFragment" />
    </fragment>

    <!-- Board Fragment -->
    <fragment
        android:id="@+id/boardFragment"
        android:name="com.example.pot.ui.theme.fragment.BoardFragment"
        tools:layout="@layout/fragment_board" />

    <!-- Chat Fragment -->
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.example.pot.ui.theme.fragment.ChatFragment"
        tools:layout="@layout/fragment_chat" />

    <!-- ExerciseBoard Fragment -->
    <fragment
        android:id="@+id/exerciseBoardFragment"
        android:name="com.example.pot.ui.theme.fragment.ExerciseBoardFragment"
        tools:layout="@layout/fragment_exercise_board">
        <action
            android:id="@+id/action_exerciseBoardFragment_to_writeFragment"
            app:destination="@id/writeFragment" />
    </fragment>

    <!-- TaxiBoard Fragment -->
    <fragment
        android:id="@+id/taxiBoardFragment"
        android:name="com.example.pot.ui.theme.fragment.TaxiBoardFragment"
        tools:layout="@layout/fragment_taxi_board">
        <action
            android:id="@+id/action_taxiBoardFragment_to_writeFragment"
            app:destination="@id/writeFragment" />
    </fragment>

    <!-- StudyBoard Fragment -->
    <fragment
        android:id="@+id/studyBoardFragment"
        android:name="com.example.pot.ui.theme.fragment.StudyBoardFragment"
        tools:layout="@layout/fragment_study_board">
        <action
            android:id="@+id/action_studyBoardFragment_to_writeFragment"
            app:destination="@id/writeFragment" />
    </fragment>

    <!-- MealBoard Fragment -->
    <fragment
        android:id="@+id/mealBoardFragment"
        android:name="com.example.pot.ui.theme.fragment.MealBoardFragment"
        tools:layout="@layout/fragment_meal_board">
        <action
            android:id="@+id/action_mealBoardFragment_to_writeFragment"
            app:destination="@id/writeFragment" />
    </fragment>


    <!-- MyPage Fragment -->
    <fragment
        android:id="@+id/myPageFragment"
        android:name="com.example.pot.ui.theme.fragment.MyPageFragment"
        tools:layout="@layout/fragment_my_page" />

    <!-- Write Fragment -->
    <fragment
        android:id="@+id/writeFragment"
        android:name="com.example.pot.ui.theme.fragment.WriteFragment"
        tools:layout="@layout/fragment_write" />


</navigation>
